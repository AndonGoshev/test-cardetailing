{
  "name": "test-cardetailing",
  "version": "1.0.0",
  "description": "Hot Vision - Професионален детайлинг център в Пловдив",
  "scripts": {
    "start": "eleventy --serve",
    "build": "eleventy",
    "css:build": "tailwindcss -i ./src/assets/css/tailwind.css -o ./_site/assets/css/styles.css --minify",
    "css:watch": "tailwindcss -i ./src/assets/css/tailwind.css -o ./_site/assets/css/styles.css --watch",
    "dev": "npm-run-all --parallel css:watch start",
     "deploy": "echo 'Use GitHub Actions instead'"
  },
  "keywords": [
    "detailing",
    "auto detailing",
    "car detailing",
    "luxury detailing",
    "professional detailing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "autoprefixer": "^10.4.17",
    "gh-pages": "^6.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  }
}
