<!-- Services Section -->
<section class="section-padding relative">
    <div class="container-custom">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-white">Услуги</h2>

        <!-- Services Grid Container -->
        <div class="w-full">
            <!-- Desktop: 2 rows x 3 columns, Tablet: 3 rows x 2 columns -->
            <div class="hidden md:grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for service in services.slice(0, 6) %}
                    <div style="box-shadow: 0 4px 10px rgba(0, 0, 0, 0.8);" 
                         class=" border-2 border-gray-900 service-card relative bg-gradient-to-br from-luxury-black to-black-900 p-6 rounded-[25px] flex flex-col items-center text-left">

                        <!-- Rounded Square Image Container -->
                        <div class="w-32 h-32 mb-6 rounded-[20%] overflow-hidden border-2 border-gray-900">
                            <img 
                                src="{{ service.image | url }}" 
                                alt="{{ service.alt }}"
                                class="w-full h-full object-cover"
/>
                        </div>

                        <!-- Text Content -->
                        <h3 class="w-full text-xl font-bold mb-4 text-white text-left">{{ service.title }}</h3>
                        <p class="text-luxury-gray">{{ service.description }}</p>
                    </div>
                {% endfor %}
            </div>

            <!-- Mobile: Horizontal Scrolling -->
            <div class="md:hidden overflow-x-auto">
                <div class="flex gap-6 pb-4" style="width: max-content;">
                    {% for service in services.slice(0, 6) %}
                        <div style="box-shadow: 0 4px 10px rgba(0, 0, 0, 0.8); width: 280px; flex-shrink: 0;" 
                             class="border-2 border-gray-900 service-card relative bg-gradient-to-br from-luxury-black to-black-900 p-6 rounded-[25px] flex flex-col items-center text-center">

                            <!-- Rounded Square Image Container -->
                            <div class="w-32 h-32 mb-6 rounded-[20%] overflow-hidden border-2 border-gray-900">
                                <img 
                                    src="{{ service.image | url }}" 
                                    alt="{{ service.alt }}"
                                    class="w-full h-full object-cover"
/>
                            </div>

                            <!-- Text Content -->
                            <h3 class="text-xl font-bold mb-4 text-white">{{ service.title }}</h3>
                            <p class="text-luxury-gray">{{ service.description }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- View All Services Button -->
            <div class="text-center mt-8">
                <a href="/uslugi" class="btn-primary bg-luxury-yellow-500 inline-block">
                    Виж всички услуги
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Gallery Section -->
<section class="section-padding ">
    <div class="container-custom">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-white">Галерия</h2>

        <!-- Gallery Container -->
        <div class="relative">
            <!-- Navigation Buttons -->
            <button id="prevBtn" class="absolute left-4 top-1/2 transform -translate-y-1/2 z-30 bg-luxury-yellow hover:bg-yellow-600 text-white p-3 rounded-full transition-all duration-300 shadow-lg backdrop-blur-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="15,18 9,12 15,6"></polyline>
                </svg>
            </button>

            <button id="nextBtn" class="absolute right-4 top-1/2 transform -translate-y-1/2 z-30 bg-luxury-yellow hover:bg-yellow-600  text-white p-3 rounded-full transition-all duration-300 shadow-lg backdrop-blur-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="9,18 15,12 9,6"></polyline>
                </svg>
            </button>

            <!-- Gallery Wrapper -->
            <div class="overflow-hidden rounded-[50px] shadow-2xl " style="box-shadow: 0 4px 30px rgba(0, 0, 0, 0.8);">
                <div id="gallerySlider" class="flex transition-transform duration-500 ease-in-out">
                    {% for project in projects.slice(0, 5) %}
                        <div class="w-full flex-shrink-0 relative">
                            <!-- Project Image -->
                            <div class="relative h-[500px] md:h-[600px] rounded-[50px] overflow-hidden border-2 border-gray-900 ">
                                <img 
                                    src="{{ project.images[0] | url }}" 
                                    alt="{{ project.carMake }} {{ project.carModel }} - {{ project.service }}"
                                    class="w-full h-full object-cover"
/>

                                <!-- Gradient Overlay -->
                                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>

                                <!-- Project Info -->
                                <div class="absolute bottom-0 left-0 right-0 p-8 text-center">
                                    <h3 class="text-2xl md:text-3xl font-bold text-white mb-2">
                                        {{ project.carMake }}
                                        {{ project.carModel }}
                                    </h3>
                                    <p class="text-luxury-gray text-lg md:text-xl">
                                        {{ project.service }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Gallery Indicators -->
            <div class="flex justify-center mt-6 space-x-2">
                {% for project in projects.slice(0, 5) %}
                    <button 
                        class="gallery-indicator w-3 h-3 rounded-full bg-luxury-gray/40 hover:bg-luxury-yellow transition-all duration-300"
                        data-slide="{{ loop.index0 }}"
                    ></button>
                {% endfor %}
            </div>
        </div>

        <!-- View All Projects Button -->
        <div class="text-center mt-12">
            <a href="/proekti" class="btn-secondary">
                Вижте цялата галерия
            </a>
        </div>
    </div>
</section>

